<main class="d-flex min-vh-100">
        <section class ="row justify-content-center my-4">
        <div class="col-12 col-sm-6 col-md-6">
          <h2 class="text-center text-secondary">Login</h2>
          <div class="row justify-content-center">
            <div class="col-sm mb-3 p-4 bg-white">
              <form>
                <div class="form-group">
                  <label for="email-input">Email address</label>
                  <input type="email" class="form-control" id="email-input" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                  <label for="password-input">Password</label>
                  <input type="password" class="form-control" id="password-input">
                </div>
                <button type="submit" class="btn">Submit</button>
              </form>
            </div>
          </div>
        </div>
        <div class="col-12 col-sm-6 col-md-6">
          <h2 class="text-center text-secondary">Sign Up</h2>
          <div class="row justify-content-center">
            <div class="col-sm mb-3 p-4 bg-white">
              <form>
                <div class="form-group">
                  <label for="name-input">Name</label>
                  <input type="name" class="form-control" id="name-input">
                  <small class="form-text text-muted">This name will be displayed on  posts and comments.</small>
                </div>
                <div class="form-group">
                  <label for="email-input">Email address</label>
                  <input type="email" class="form-control" id="email-input" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                  <label for="password-input">Password</label>
                  <input type="password" class="form-control" id="password-input">
                </div>
                <button type="submit" class="btn">Submit</button>
              </form>
            </div>
          </div>
        </div>
        </section>
      </main>

      <script src="/public/js/login.js"></script>